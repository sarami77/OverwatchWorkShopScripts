rule: "Bot/ActionState/Attack"
Event.OngoingPlayer
if(
    IsDummyBot() &&
    actionState == ActionState.Attack
){
    statusText = <"Attack">;

    // hero unique action
    heroUniqueAction();

    // set initial face direction
    SetFacing(ep, EyePosition(target), Relative.ToWorld);

    // start facing direction
    startFacingTarget();
    
    // action loop
    while(actionState == ActionState.Attack){
        // check abyss
        define distance! = moveMeterPerSec * watchUpdateRate;
        define fAbyss! = IsBelowAbyss(BlockedPositonByLocalVector(Forward(), distance));
        define bAbyss! = IsBelowAbyss(BlockedPositonByLocalVector(Backward(), distance));

        // set moveDir direction
        setMoveDir(fAbyss, bAbyss);

        define rAbyss! = IsBelowAbyss(BlockedPositonByLocalVector(Right() + moveDir, distance));    // care moveDir
        define lAbyss! = IsBelowAbyss(BlockedPositonByLocalVector(Left() + moveDir, distance));

        // set sidestep direction
        setSideStep(rAbyss, lAbyss);

        // if(fAbyss) dbgPlyEft(BlockedPositonByLocalVector(Forward(), distance));
        // if(bAbyss) dbgPlyEft(BlockedPositonByLocalVector(Backward(), distance));
        // if(rAbyss) dbgPlyEft(BlockedPositonByLocalVector(Right() + moveDir, distance));
        // if(lAbyss) dbgPlyEft(BlockedPositonByLocalVector(Left() + moveDir, distance));

        // start move by moveDir and sideStepDir
        startMove();

        // check stuck
        checkAndBreakStuck();

        Wait(watchUpdateRate, WaitBehavior.AbortWhenFalse);
    }
}

