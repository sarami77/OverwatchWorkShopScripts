void stopMove()"stopMove"{
    StopThrottleInDirection();
} 

void startMove()"startMove"{
    if(moveDir != 0 && sideStepDir != 0){
        StartMoveInDir(moveDir + sideStepDir);
    }
    else if(moveDir == 0 && sideStepDir != 0){
        StartMoveInDir(sideStepDir);
    }
    else if(moveDir != 0 && sideStepDir == 0){
        StartMoveInDir(moveDir);
    }
    else{
        stopMove();
    }
}

define StartMoveInDir(define dir):
    StartThrottleInDirection(
        ep, dir, 1,
        Relative.ToPlayer,
        ThrottleBehavior.ReplaceExistingThrottle,
        ThrottleRev.DirectionAndMagnitude);

define stuckRange: 0.75;

playervar define prevPosition;

void checkAndBreakStuck()"checkAndBreakStuck"{
    if(
        prevPosition != 0 &&    // has prevPosition
        sideStepDir != 0 &&     // has sidestep
        moveDir != 0 &&         // has moveDir
        DistanceBetween(PositionOf(), prevPosition) < stuckRange    // not moved from prevPosition
    ){
        statusText = <"checkAndBreakStuck <0>", target>;
        
        while(
            // keep try break stuck prob
            //ProbabilityTrue(75) &&
            // not moved from prevPosition yet
            DistanceBetween(PositionOf(), prevPosition) < stuckRange
        ){
            // change move direction
            moveDir = Forward();
            //moveDir = RandomValueInArray([Forward(), Forward(), Backward()]);
            //sideStepDir = RandomValueInArray([0, 0, Right(), Left()]);
            startMove();

            // try jump or croch
            define breakStuckButton! = RandomValueInArray([Button.Jump, Button.Crouch]);
            StartHoldingButton(ep, breakStuckButton);
            Wait(RandomReal(0, 2), WaitBehavior.IgnoreCondition);   // keep hold button
            StopHoldingButton(ep, breakStuckButton);
        }
    }
    else{
        prevPosition = PositionOf();
    }
}

void setMoveDir(define forwardIsAbyss!, define backwardIsAbyss!)"setMoveDir"{
    // set move direction
    define distToTarget! = DistanceBetween(ep, target);

    // detect abyss at forward and backward
    if(
        forwardIsAbyss && backwardIsAbyss
    ){
        // no movedir
        moveDir = 0;
    }
    // target is close and not forward abyss
    else if(
        distToTarget > AttackRangeMax && !forwardIsAbyss
    ){
        moveDir = Forward();
    }
    // target is close and not backward abyss
    //   and in attack state (not backward in support state)
    else if(
        actionState == ActionState.Attack &&    
        distToTarget < AttackRangeMin && !backwardIsAbyss

    ){
        moveDir = Backward();
    }
    else{
        // no moveDir
        moveDir = 0;
    }
}

void setSideStep(define rightIsAbyss!, define leftIsAbyss!)"setSideStep"{
    define distToTarget! = DistanceBetween(ep, target);
    define isGoodRange! =
        distToTarget >= AttackRangeMin &&
        distToTarget <= AttackRangeMax;
    // now, stoped side step and my range
    if(sideStepSecond == 0 && isGoodRange){
        // start keep side step
        sideStepSecond = keepSideStepSecond;

        // detect abyss at right and left
        if(
            rightIsAbyss && leftIsAbyss
        ){
            // no sideStepDir
            sideStepDir = 0;
        }
        else{
            // no sidestep prob
            if(ProbabilityTrue(50)){
                sideStepDir = 0;
            }
            else
            {
                // right sidestep
                if(ProbabilityTrue(50)){
                    if(!rightIsAbyss){
                        sideStepDir = Right();
                    }
                    else{
                        sideStepDir = Left();
                    }
                }
                // left sidestep
                else{
                    if(!leftIsAbyss){
                        sideStepDir = Left();
                    }
                    else{
                        sideStepDir = Right();
                    }
                }
            }
        }
    }
    // else
}

define keepSideStepSecond: RandomReal(0, 3);

