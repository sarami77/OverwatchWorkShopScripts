    EyePosition(target) + RandomPosition(botAimScat, botAimScat, botAimScat);

define startFacingTarget():
    StartFacing(
        ep,
        DirectionTowards(
            EyePosition(),
            aimmingPosition
        ),
        300,
        Relative.ToWorld, FacingRev.DirectionAndTurnRate
    );

