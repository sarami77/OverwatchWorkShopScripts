rule: "Perk/Player/Fearless/updateDealDamage"
Event.OngoingPlayer
Team.Team1
Player.All
if(
    perkType == PerkType.Fearless &&
    perkState == PerkState.Using
){
    // get enemy count of naer
    define nearEnemyCount = CountOf(
        FilteredArray(
            PlayersWithinRadius(
                PositionOf(EventPlayer()), fearlessRange, Team.Team2, RadiusLOS.Off
            ), IsAlive(ArrayElement())
        )
    );

    // change status value
    if(nearEnemyCount > 0)
        perkEffectStatus += (nearEnemyCount * 2);
    
    else
        perkEffectStatus -= 10;
    
    // round status value
    if(300 < perkEffectStatus)
        perkEffectStatus = 300;
    else if(100 > perkEffectStatus)
        perkEffectStatus = 100;
    
    SetDamageDealt(EventPlayer(), perkEffectStatus);
    SetHealingReceived(EventPlayer(), perkEffectStatus);
    WaitUpdateMediumCycle();
    LoopIfConditionIsTrue();
}

