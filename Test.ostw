globalvar define slow = 100;

rule: "Debug/setSlow"
Event.OngoingPlayer
Team.Team1
if(
    HostPlayer() == EventPlayer() &&
    IsButtonHeld(EventPlayer(), Button.Jump) &&
    intaractDoublePressed
){ 
    // 100 -> 50 -> 25 -> 10
    if(slow == 100)
        slow = 50;
    else if(slow == 50)
        slow = 25;
    else if(slow == 25)
        slow = 10;
    else if(slow == 10)
        slow = 100;
    else
        slow = 100;
    SetSlowMotion(slow);
    dbgMsg(<"setSlow <0>", slow>);
}

