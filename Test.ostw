// TestCode -----------------------------------------------
playervar define _enableButtonControl;
rule: "TestCode"
Event.OngoingPlayer
if(
    hp == ep &&
    HasSpawned() &&
    IsButtonHeld(ep, Button.Interact)
){
    _enableButtonControl = true;
    async StartButtonControl_PrimaryFire();
    async StartButtonControl_SecondaryFire();
}

rule: "TestCode"
Event.OngoingPlayer
if(
    hp == ep &&
    HasSpawned() &&
    !IsButtonHeld(ep, Button.Interact)
){
    _enableButtonControl = false;
}


void StartButtonControl_PrimaryFire()"StartButtonControl_PrimaryFire"{
    StartButtonControl(Button.PrimaryFire);
}

void StartButtonControl_SecondaryFire()"StartButtonControl_SecondaryFire"{
    StartButtonControl(Button.SecondaryFire);
}

void StartButtonControl(define button){
    while(true){
        dbgHudTxt(<"<1> <0> on", button, ep>);
        Wait(RandomReal(1, 3), WaitBehavior.AbortWhenFalse);
        if(!_enableButtonControl) break;

        dbgHudTxt(<"<1> <0> off", button, ep>);
        Wait(RandomReal(1, 3), WaitBehavior.AbortWhenFalse);
        if(!_enableButtonControl) break;
    }

    dbgHudTxt(<"<1> <0> CONTROL END", button, ep>);
}

