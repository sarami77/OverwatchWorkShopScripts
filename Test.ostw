playervar define isInvincible = false;

rule: "debug_player"
Event.OngoingPlayer
if(
    EventPlayer() == HostPlayer() &&
    IsButtonHeld(EventPlayer(), Button.Interact)
){
    isInvincible = !isInvincible;

    if(isInvincible){
        SmallMessage(EventPlayer(), "Invincible ON");
        SetStatus(EventPlayer(), null, Status.Invincible, 9999);
    }
    else{
        SmallMessage(EventPlayer(), "Invincible OFF");
        ClearStatus(EventPlayer(), Status.Invincible);
    }
}