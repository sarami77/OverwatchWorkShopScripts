rule: "Perk/Player/MissileBarrage/activate"
Event.OngoingPlayer
Team.Team1
Player.All
if(
    perkType == PerkType.MissileBarrage &&
    perkState == PerkState.Using
){
    // set time limit
    perkTimeLimit = 300;
    // set status
    perkPosition = 0;
    perkPosition2 = 0;
    landPosition = -1;
    landPosition2 = -1;  
    perkEffectStatus = 0; 
