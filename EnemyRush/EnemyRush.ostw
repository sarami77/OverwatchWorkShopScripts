        if(
            flyDir != 0
        ){
            ApplyImpulse(ep, flyDir, force * 0.8,
                Relative.ToWorld, ContraryMotion.Cancel);
        }
    }

    Wait(3, WaitBehavior.AbortWhenFalse);
    WaitUntilServerLoadLimitRelease();
    LoopIfConditionIsTrue();
}

