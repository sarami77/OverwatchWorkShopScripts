    define isFirstTeleport! = true;

    while(
        tryCount < freezeSecond &&
        IsAlive(ep) &&
        IsAlive(target) &&
        IsOnGround(target)
    ){
        teleportPosition = PositionOf(target) + Normalize(VectorWithOutY(DirectionTowards(target, ep)));
