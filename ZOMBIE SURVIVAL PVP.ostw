    gameState == GameState.Initialize
){
    WaitNextPhase();
    //DisableInspectorRecording();
    DisableScoring();
    DisableScoreboard(AllPlayers());
    DisableGameModeHud(AllPlayers());
    DisableGameModeInworldUI(AllPlayers());
