rule: "Game/State/RoundPrepear"
Event.OngoingGlobal
if(
    gameState == GameState.RoundPrepear
){
    zombieDealDamage = 400;
    zombieHealth = 50;
    zombieSpeed = 50;
    AllPlayers().playerState = PlayerState.Survivor;
    Respawn(AllPlayers());
